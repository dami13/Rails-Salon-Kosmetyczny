<h1>Dodaj pracownika</h1>

<%= form_for @employees, url: {action: "create"} do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, :class => 'form-control', :requied => 'requied',autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Hasło' %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, :class => 'form-control', :requied => 'requied', autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Powtórz hasło' %><br />
      <%= f.password_field :password_confirmation, :class => 'form-control', :requied => 'requied', autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, 'Imię' %>
      <%= f.text_field :first_name, :class => 'form-control', :requied => 'requied' %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, 'Nazwisko' %>
      <%= f.text_field :last_name, :class => 'form-control', :requied => 'requied' %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, 'Numer telefonu' %>
      <%= f.phone_field :phone_number, :class => 'form-control', :requied => 'requied' %>
    </div>

    <div class="form-group">
      <%= f.label :desc, 'Opis' %>
      <%= f.text_area :desc, :class => 'form-control' %>
    </div>

    <%= submit_tag 'Wyślij', :class => 'btn btn-default' %>



<% end %>

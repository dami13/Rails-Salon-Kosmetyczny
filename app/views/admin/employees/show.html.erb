<table class="table table-striped table-hover">
  <tr>
    <th>Imię</th>
    <td><%= @employee.first_name %></td>
  </tr>
  <tr>
    <th>Nazwisko</th>
    <td><%= @employee.last_name %></td>
  </tr>
  <tr>
    <th>E-mail</th>
    <td><%= @employee.email %></td>
  </tr>
  <tr>
    <th>Administrator</th>
    <td>
      <% if @employee.is_admin %>
      Tak
      <% else %>
      Nie
      <% end %>
    </td>
  </tr>
  <tr>
    <th>Opis</th>
    <td><%= @employee.desc %></td>
  </tr>
  <tr>
    <th>Usługi</th>
    <td>
      <% if @services.blank? %>
        Ten pracownik nie oferuje żadnych usług
      <% else %>
        <% @services.each do |s| %>
            <%= s.name %> <br />
        <% end %>
      <% end %>
    </td>
  </tr>
</table>
<p>Opinie:</p>
<% if @visits.blank? %>
    Ten pracownik nie posiady komentarzy
<% else %>
  <%  @visits.each  do |s| %>
      <% @visit = s.service_visits.first %>
      <% @client = s.client %>
    <table class="table table-bordered table-striped table-hover">
      <thead>
      <tr>
        <th>
          <%= @client.first_name %>
          <%= @client.last_name %>
          Data wizyty: <%= s.start_time %>
        </th>
        <th>
          Ocena
        </th>
        <th>
          Status
        </th>
        <th>
          Akcja
        </th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= @visit.client_opinion_comment %>
          </td>
          <td>
            <%= @visit.client_opinion_rating %>
          </td>
          <td width="150px">
            <% if s.status %>
              <%= 'Zakonczona' %>
            <% else %>
              <%= 'Nie odbyta' %>
            <% end %>
          </td>
          <td>

          </td>
      </tr>
      </tbody>
    </table>
   <% end %>
<% end %>

<h1>Usługi</h1>
<div id="services">
   <% if @services.blank? %>
      Brak usług!
   <% else %>
   <% @services.each do |s| %>
   <table class="listing" summary="Service list">
     <col width="110">
    <tr class="header">
      <td><h3><%= s.name %></h3></td>
    </tr>

    <tr>
      <div>
        <th>Opis</th>   <td></td>    <td><%= s.description %></td>
      </div>
    </tr>

    <tr>
      <div>
        <th>Czas trwania</th>   <td></td>      <td><%= s.duration %> minut</td>
      </div>
    </tr>

    <tr>
      <div>
        <th>Cena</th>  <td></td>     <td><%= s.price %> zł</td>
      </div>
    </tr>

    <tr>
      <div>

      </div>
    </tr>
      <% end %>
  </table>
  <% end %>
</div>
<p></p>
